#!/usr/bin/env bash
# This script loops from 1 to 10 and displays different messages based on the loop iteration

# Initialize the loop counter
count=1

# Loop while the counter is less than or equal to 10
while [ $count -le 10 ]; do
    # Check if it's the 4th iteration
    if [ $count -eq 4 ]; then
        echo "bad luck"
    # Check if it's the 8th iteration
    elif [ $count -eq 8 ]; then
        echo "good luck"
    else
        echo "Best School"
    fi
    
    # Increment the counter
    ((count++))
done
