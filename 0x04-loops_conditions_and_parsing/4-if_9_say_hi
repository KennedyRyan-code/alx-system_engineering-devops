#!/usr/bin/env bash
# This script is displaying "Best School" 10 times, but saying "Hi" on the 9th iteration

# Initialize the loop counter
count=0

# Loop while the counter is less than 10
while [ $count -lt 10 ]; do
    # Check if it's the 9th iteration
    if [ $count -eq 8 ]; then
        echo "Best School"
        echo "Hi"
    else
        echo "Best School"
    fi
    
    # Increment the counter
    ((count++))
done
